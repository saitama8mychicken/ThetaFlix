// JAVASCRIPT

class NFT {
  constructor(id, name, creator, isPrivate) {
    this.id = id;
    this.name = name;
    this.creator = creator;
    this.isPrivate = isPrivate;
  }

  makePublic() {
    this.isPrivate = false;
    console.log(`${this.name} is now public.`);
  }

  makePrivate() {
    this.isPrivate = true;
    console.log(`${this.name} is now private.`);
  }
}

// Create an NFT instance
const myNFT = new NFT(1, "My Artwork", "JohnDoe", true);

// Check the initial privacy status
console.log(`${myNFT.name} is private: ${myNFT.isPrivate}`);

// Make the NFT public
myNFT.makePublic();

// Check the updated privacy status
console.log(`${myNFT.name} is private: ${myNFT.isPrivate}`);

// Make the NFT private again
myNFT.makePrivate();

// Check the updated privacy status
console.log(`${myNFT.name} is private: ${myNFT.isPrivate}`);
