// JAVASCRIPT

// User class representing a user in the system
class User {
  constructor(id, name, nftToken) {
    this.id = id;
    this.name = name;
    this.nftToken = nftToken;
  }

  sellContentAsNFT(content, price) {
    const nft = new NFT(content, price);
    this.nftToken = nft;
    console.log(`${this.name} has listed the content as an NFT for ${price} ETH.`);
  }

  purchaseNFT(nft) {
    console.log(`${this.name} has purchased the NFT.`);
    this.nftToken = nft;
  }

  accessExclusiveFeature() {
    if (this.nftToken) {
      console.log(`${this.name} has accessed the exclusive feature.`);
    } else {
      console.log(`${this.name} does not have the required NFT to access the exclusive feature.`);
    }
  }
}

// NFT class representing a non-fungible token
class NFT {
  constructor(content, price) {
    this.content = content;
    this.price = price;
  }
}

// Create users
const user1 = new User(1, "John");
const user2 = new User(2, "Jane");

// User 1 sells content as an NFT
user1.sellContentAsNFT("Exclusive Video", 2.5);

// User 2 purchases the NFT
user2.purchaseNFT(user1.nftToken);

// User 2 accesses exclusive feature
user2.accessExclusiveFeature();
