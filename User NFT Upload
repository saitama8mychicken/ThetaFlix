<!DOCTYPE html>
<html>
<head>
  <title>NFT Upload</title>
</head>
<body>
  <h2>Upload NFT</h2>
  <form id="uploadForm" enctype="multipart/form-data">
    <input type="file" id="nftFile" accept="image/*, video/*" />
    <button type="submit">Upload</button>
  </form>

  <script>
    document.getElementById('uploadForm').addEventListener('submit', function(event) {
      event.preventDefault();

      // Get the file from the input element
      const fileInput = document.getElementById('nftFile');
      const file = fileInput.files[0];

      // Create a FormData object and append the file to it
      const formData = new FormData();
      formData.append('nftFile', file);

      // Send the form data to the server using AJAX or fetch API
      // Replace the 'uploadUrl' with the actual URL to upload the file
      fetch('uploadUrl', {
        method: 'POST',
        body: formData
      })
      .then(response => response.json())
      .then(data => {
        // Handle the server response
        console.log('File uploaded successfully:', data);
      })
      .catch(error => {
        // Handle any errors that occurred during the upload
        console.error('Error uploading file:', error);
      });
    });
  </script>
</body>
</html>
