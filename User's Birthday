// JAVASCRIPT Only

// Sample user data
const users = [
  {
    name: 'User 1',
    birthday: '1990-05-20',
    subscribers: 5000000,
  },
  {
    name: 'User 2',
    birthday: '1992-10-15',
    subscribers: 15000000,
  },
  // Add more user objects
];

// Function to check if it's the user's birthday
function isBirthday(user) {
  const today = new Date();
  const birthday = new Date(user.birthday);

  return (
    today.getMonth() === birthday.getMonth() &&
    today.getDate() === birthday.getDate()
  );
}

// Function to display the user's name if it's their birthday and they have more than 10 million subscribers
function displayBirthdayMessage(user) {
  if (isBirthday(user) && user.subscribers > 10000000) {
    console.log(`Happy birthday, ${user.name}!`);
  } else {
    console.log('No birthday message to display.');
  }
}

// Loop through the users and display birthday messages
users.forEach((user) => displayBirthdayMessage(user));
